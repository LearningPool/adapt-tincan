<?xml version="1.0" encoding="utf-8"?>
<courseStructure xmlns="https://w3id.org/xapi/profiles/cmi5/v1/CourseStructure.xsd">
    <course id="@@config._xapi._activityID">
        <title>
            <langstring lang="en-US"><![CDATA[@@course.title]]></langstring>
        </title>
        <description>
            <langstring lang="en-US">
                <![CDATA[@@course.description]]>
            </langstring>
        </description>
    </course>
    <au id="@@config._xapi._activityID@@config._xapi._auID" moveOn="CompletedOrPassed" launchMethod="AnyWindow">
        <title>
            <langstring lang="en-US"><![CDATA[@@course.title]]></langstring>
        </title>
        <description>
            <langstring lang="en-US">
                <![CDATA[@@course.description]]>
            </langstring>
        </description>
        <url>index.html</url>
    </au>
</courseStructure>